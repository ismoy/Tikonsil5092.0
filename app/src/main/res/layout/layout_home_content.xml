<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorboton">


    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmerwelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/layout_home_content_relative_top_shimmer_effect" />
    </com.facebook.shimmer.ShimmerFrameLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="25dp"
        android:paddingTop="30dp"
        android:paddingEnd="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/wel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Wellcome"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/usernamewel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_toRightOf="@+id/wel"
            android:letterSpacing="0.05"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:elevation="5dp"
            android:src="@drawable/man" />


        <RelativeLayout
            android:id="@+id/relativebalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:layout_marginTop="20dp"
            android:background="@drawable/bgcardgradient"
            android:fitsSystemWindows="true"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="40dp"
                android:paddingEnd="50dp"
                android:text="@string/total_balance"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/totalbalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:paddingStart="40dp"
                android:paddingEnd="50dp"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </RelativeLayout>



    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_marginTop="260dp"
        android:background="@drawable/bgdashboard">

        <ScrollView
            android:id="@+id/scrollviewcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:padding="16dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewmoncash"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="240dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="40dp"
                    app:cardBackgroundColor="@android:color/holo_orange_light"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/moncash"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/saldomoncash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"
                        android:layout_marginTop="30dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="15sp"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewtopup"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="-99dp"
                    android:layout_marginEnd="250dp"
                    app:cardBackgroundColor="@android:color/holo_red_light"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/topup"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/saldotopup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"
                        android:layout_marginTop="30dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="15sp"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewlapoula"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="240dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="40dp"
                    app:cardBackgroundColor="@android:color/holo_red_light"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lapoula"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/saldolapoula"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"
                        android:layout_marginTop="30dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="15sp"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewnatcash"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="-99dp"
                    android:layout_marginEnd="250dp"
                    app:cardBackgroundColor="@android:color/holo_orange_light"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/natcash"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/saldonatcash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="0"
                        android:layout_marginTop="30dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="15sp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="260dp"
            android:layout_marginEnd="50dp"
            android:text="@string/lastersale"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:background="@drawable/bgcardgradient"/>

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingTop="229dp"
            android:paddingEnd="15dp">
            <com.facebook.shimmer.ShimmerFrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/shimmer"
                app:shimmer_auto_start="true"
                android:layout_marginTop="60dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <include layout="@layout/item_last_sale_shimmer_eferct"/>
                    <include layout="@layout/item_last_sale_shimmer_eferct"/>
                    <include layout="@layout/item_last_sale_shimmer_eferct"/>
                    <include layout="@layout/item_last_sale_shimmer_eferct"/>

                </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerviewultimaventa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/nodata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:textSize="20sp"
                android:visibility="gone"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:text="@string/no_hay_ventas_registrada"/>

        </RelativeLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>